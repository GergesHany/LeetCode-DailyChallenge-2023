class Solution {
public:
    double average(vector<int>& salary) {
  
       long double sum = 0; // sum of The salaries

       int mn = *min_element(salary.begin(), salary.end()); // minimum salary
       int mx = *max_element(salary.begin(), salary.end()); // maximum salary
       
       int sz = 0;
       for (auto & i: salary)
         // if the salary is not the minimum and not the maximum then add it to the sum and increment the size
         if (i != mn && i != mx) 
            sum += i, sz++;   
       return sum / double(sz);      
    }
};